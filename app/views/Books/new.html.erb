<!DOCTYPE html>
<h2>Add a new Book</h2>

<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @book do |b| %>

	<div><%= label_tag(:q, "Title") %>
	<%= b.text_field(:title) %></div>
	<div><%= label_tag(:q, "Description") %>
	<%= b.text_area(:description, size: "60x12") %></div>
	<div><%= label_tag(:q, "URL") %>
	<%= b.text_field(:url) %></div>

	<div><%= b.submit "Submit" %></div>
<% end %>