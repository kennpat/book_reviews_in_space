<!DOCTYPE html>

<% if @review.errors.any? %>
	<ul>
		<% @review.errors.full_message.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<h3>Please add a new review!</h3>	

<%= form_for [@book, @review] do |f| %>
	<div>
		<%= label_tag(:q, "Review") %>
		<%= f.text_area(:review) %>
	</div>
		<%= f.hidden_field :book_id, :value => params["book_id"] %>
		<%= f.submit "Submit" %>
<% end %>

